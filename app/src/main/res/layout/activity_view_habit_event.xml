<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmput301f17t11.cupofjava.Views.ViewHabitEventActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentL"
        android:fontFamily="monospace"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="HABIT EVENT DETAILS"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentL"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/habit_event_detail_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/take_photo" />

        <TextView
            android:id="@+id/habit_event_detail_username"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:fontFamily="monospace"
            android:text="USERNAME"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/habit_event_detail_name"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:background="@color/colorAccentL"
        android:padding="4dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/habit_event_detail_date"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="DATE"
        android:fontFamily="monospace"
        android:textColor="@color/colorAccentL"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="32dp"
        android:padding="4dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/habit_event_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="4dp"
        android:hint="COMMENT"
        android:textColor="@color/colorAccentL"
        android:fontFamily="monospace"
        android:layout_marginRight="4dp"
        android:layout_marginTop="32dp"
        android:padding="4dp"
        android:textAlignment="center"/>


</LinearLayout>
