<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmput301f17t11.cupofjava.Views.ViewHabitEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccentL"
            android:fontFamily="monospace"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="HABIT EVENT DETAILS"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccentL"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/habit_event_detail_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/take_photo" />

        </LinearLayout>

        <TextView
            android:id="@+id/habit_event_detail_name"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:background="@color/colorAccentL"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/habit_event_detail_date"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:background="@color/colorAccentL"
            android:padding="8dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/habit_event_detail_comment"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:background="@color/colorAccentL"
            android:padding="8dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/habit_event_detail_location"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:hint="Location: none"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:background="@color/colorAccentL"
            android:padding="8dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/black"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="deleteCurrentHabitEvent"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:text="DELETE"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="monospace"
            android:textSize="22sp"
            android:background="@drawable/delete_button"/>
    </LinearLayout>

</ScrollView>