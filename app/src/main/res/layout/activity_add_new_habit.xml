<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmput301f17t11.cupofjava.NewHabitActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/habit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:hint="Title"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/habit_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:hint="Reason"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/habit_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:hint="When To Start"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorLink="#f44336"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:background="@drawable/check_box_dimens"
            android:gravity="center_horizontal"
            android:text="Sunday"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkbox_mon"
            android:layout_width="match_parent"
            android:background="@drawable/check_box_dimens"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColorLink="#f44336"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Monday"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkbox_tue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/check_box_dimens"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Tuesday"
            android:textColorLink="#f44336"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />


        <CheckBox
            android:id="@+id/checkbox_wed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/check_box_dimens"
            android:layout_marginTop="16dp"
            android:textColorLink="#f44336"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Wednesday"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkbox_thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/check_box_dimens"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColorLink="#f44336"
            android:text="Thursday"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkbox_fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/check_box_dimens"
            android:fontFamily="sans-serif"
            android:textColorLink="#f44336"
            android:gravity="center_horizontal"
            android:text="Friday"
            android:textStyle="bold"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkbox_sat"
            android:layout_width="match_parent"
            android:textColorLink="#f44336"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/check_box_dimens"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Saturday"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="@drawable/save_button"
            android:text="SAVE"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
